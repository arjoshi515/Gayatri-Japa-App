<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="@color/primary_color"
                android:centerColor="@color/secondary_color"
                android:endColor="@color/accent_color"
                android:type="linear" />
        </shape>
    </item>

    <!-- Decorative patterns -->
    <item android:top="50dp" android:right="50dp">
        <shape android:shape="oval">
            <solid android:color="#20FFFFFF" />
            <size android:width="100dp" android:height="100dp" />
        </shape>
    </item>

    <item android:bottom="100dp" android:left="30dp">
        <shape android:shape="oval">
            <solid android:color="#15FFFFFF" />
            <size android:width="150dp" android:height="150dp" />
        </shape>
    </item>

    <item android:top="200dp" android:right="100dp">
        <shape android:shape="oval">
            <solid android:color="#10FFFFFF" />
            <size android:width="80dp" android:height="80dp" />
        </shape>
    </item>

    <!-- Sacred geometry pattern -->
    <item android:gravity="center">
        <shape android:shape="oval">
            <stroke
                android:width="2dp"
                android:color="#30FFFFFF" />
            <size android:width="300dp" android:height="300dp" />
        </shape>
    </item>

    <item android:gravity="center">
        <shape android:shape="oval">
            <stroke
                android:width="1dp"
                android:color="#20FFFFFF" />
            <size android:width="400dp" android:height="400dp" />
        </shape>
    </item>

</layer-list>